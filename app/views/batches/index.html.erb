<div class = "row">

  <div class="panel panel-warning col-md-6 col-md-offset-3">

      <div class="panel-heading text-center">
        <h3>Batches</h3>
      </div>

      <div class="panel-body text-center">
        <% @batches.each do |batch| %>
            <h4><%= link_to "Batch #{batch.code}", batch_path(batch) %></h4>
              <p><b>Starts at:</b> <%= batch.starts_at %>
               <b>Ends at: </b> <%= batch.ends_at %> </p>

        <% end %>

        <div>
          <%= render 'batch_form' %>
        </div>

      </div>

    </div>

</div>
