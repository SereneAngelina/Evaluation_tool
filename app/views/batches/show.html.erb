<div class = "row">

  <div class="panel panel-warning col-md-6 col-md-offset-3">

      <div class="panel-heading text-center">
        <h3>Students</h3>
      </div>

      <div class="panel-body text-center">
        <% @batch.students.each do |student| %>
            <h4><%=link_to student.name, batch_student_path(@batch, student.id) %></h4>
            <%= link_to student.image_url,batch_student_path(@batch, student.id) %>
            <%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, batch_student_path(@batch, student),
            method: :delete, data: { confirm: "Are you sure?" } %>
        <% end %>
      </div>

      <div>
        <%= render 'form' %>
      </div>

    </div>

</div>
