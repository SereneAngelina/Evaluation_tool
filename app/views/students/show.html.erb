<div class = "row">

  <div class="panel panel-warning col-md-6 col-md-offset-3">

      <div class="panel-heading text-center">
        <h3>Student Evaluation</h3>
      </div>

      <div class="panel-body text-center">
        <p><b><%= @student.name %></b></p>
        <p>Batch<%= @student.batch.code %></p>
        <% @student.evaluations.each do |evaluation| %>

            <% if evaluation.color_code === "green"%>
             <%= link_to "<button class='btn btn-success btn-lg'>  </button>".html_safe, edit_student_evaluation_path(@student, evaluation) %>

            <% elsif evaluation.color_code === "yellow" %>
            <%= link_to "<button class='btn btn-warning btn-lg'></button>".html_safe, edit_student_evaluation_path(@student, evaluation) %>

            <% elsif evaluation.color_code === "red" %>
            <%= link_to "<button class='btn btn-danger btn-lg'></button>".html_safe, edit_student_evaluation_path(@student, evaluation) %>
            <% end %>

        <% end %>


      </div>
      <div>
        <%= render 'form' %>

      </div>



    </div>

</div>
