<div class = "row">

  <div class="panel panel-warning col-md-6 col-md-offset-3">

      <div class="panel-heading text-center">
        <h3>Student Evaluation</h3>
      </div>

      <div class="panel-body text-center">
        <p><%= @student.name %></p>
        <p><%= @student.batch.code %></p>
        <% @student.evaluations.each do |evaluation| %>
            <%= evaluation.color_code %>
        <% end %>


      </div>
      <div>
        <%= render 'form' %>
      </div>

    </div>

</div>
