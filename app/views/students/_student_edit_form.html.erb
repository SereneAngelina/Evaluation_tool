
<%= form_for [@batch, @student] do |f| %>


      <div class="row text-center">

        <div class="form-group">
            <label>Student name :</label>
            <%= f.text_field :name, placeholder: "Add student name" %>
            <label>Student pic :</label>
            <%= f.text_field :image_url, placeholder: "Add image url" %>
        </div>

        <div class="actions">
         <%= f.submit "Update", class: "btn btn-success" %>
        </div>

        <% end %>

     </div>
